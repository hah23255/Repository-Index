{
  "name": "vs-code-javascript-examples",
  "version": "1.0.0",
  "description": "Collection of JavaScript examples demonstrating functions, expressions, and programming concepts",
  "main": "index.js",
  "scripts": {
    "test": "jest --passWithNoTests",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run format:check && npm test",
    "check-syntax": "find . -name '*.js' -not -path './node_modules/*' -exec node -c {} \\;"
  },
  "keywords": [
    "javascript",
    "functions",
    "examples",
    "programming",
    "education"
  ],
  "author": "H_A_Hristov",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "@eslint/js": "^9.0.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
